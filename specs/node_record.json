{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://peoplechain.dev/schemas/node_record.json",
  "title": "NodeRecord",
  "type": "object",
  "required": ["node_id", "user_id", "public_keys", "network"],
  "properties": {
    "node_id": { "type": "string" },
    "user_id": { "type": "string" },
    "public_keys": {
      "type": "object",
      "required": ["ed25519", "x25519"],
      "properties": {
        "ed25519": { "type": "string" },
        "x25519": { "type": "string" }
      },
      "additionalProperties": false
    },
    "network": {
      "type": "object",
      "required": ["addresses"],
      "properties": {
        "addresses": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "capabilities": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 0
        }
      },
      "additionalProperties": false
    },
    "metadata": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}
